public class Coche {
    private int numPuertas;

    public Coche(int numPuertas) {
        this.numPuertas = numPuertas;
    }

    public int getNumPuertas() {
        return numPuertas;
    }

    public void setNumPuertas(int numPuertas) {
        this.numPuertas = numPuertas;
    }

    public void incrementarPuertas() {
        this.numPuertas++;
    }

    public static void main(String[] args) {
        Coche miCoche = new Coche(3); // Crear un objeto Coche con 3 puertas
        System.out.println("El coche tiene " + miCoche.getNumPuertas() + " puertas.");
        miCoche.incrementarPuertas(); // Incrementar el número de puertas en 1
        System.out.println("Después de añadir una puerta, el coche tiene " + miCoche.getNumPuertas() + " puertas.");
    }
}
