//Primera parte

public class SumaNumeros {
    public static int sumaTresNumeros(int num1, int num2, int num3) {
        int suma = num1 + num2 + num3;
        devolver suma;
    }

    public static void main(String[] args) {
        int num1 = 5;
        int num2 = 10;
        int num3 = 15;
        int resultado = sumaTresNumeros(num1,num2,num3);
        System.out.println("El resultado de la suma es: " + resultado);
    }
}

//Segunda parte

clase pública Coche {
    privado int numPuertas;

    public Coche(int numPuertas) {
        this.numPuertas = numeroPuertas;
    }

    public int getNumPuertas() {
        volver numPuertas;
    }

    public void setNumPuertas(int numPuertas) {
        this.numPuertas = numeroPuertas;
    }

    public void incrementarPuertas() {
        this.numPuertas++;
    }

    public static void main(String[] args) {
        Coche miCoche = new Coche(3); // Crear un objeto Coche con 3 puertas
        System.out.println("El coche tiene " + miCoche.getNumPuertas() + " puertas.");
        miCoche.incrementarPuertas(); // Incrementar el número de puertas en 1
        System.out.println("Después de añadir una puerta, el coche tiene " + miCoche.getNumPuertas() + " puertas.");
    }
}
